@model DemoMovieMovie.Models.HeThongPhanPhoi

@{
    ViewData["Title"] = "Nhập thông tin hệ thống phân phối";
}

<h2>Nhập thông tin hệ thống phân phối</h2>

<form asp-action="Index" method="post">
    <div>
        <label>Mã HTPP:</label>
        <input asp-for="MaHTPP" />
        <span asp-validation-for="MaHTPP" class="text-danger"></span>
    </div>

    <div>
        <label>Tên HTPP:</label>
        <input asp-for="TenHTPP" />
        <span asp-validation-for="TenHTPP" class="text-danger"></span>
    </div>

    <button type="submit">Gửi</button>
</form>
